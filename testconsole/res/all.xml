            <pdf-html>
            The actual header sir.
            </pdf-html>
        </pdf-header>

        <pdf-footer line="true">
            <pdf-html>Footer</pdf-html>
        </pdf-footer>

        <pdf-html>
            <div>This is the content page</div>
            <div style="background-color: orange; width: 2cm; height: 4cm">Orange block sir</div>
        </pdf-html>
    
    </pdf-document>

</pdf-renderer>