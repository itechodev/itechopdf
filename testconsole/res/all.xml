<pdf-renderer>

    <pdf-document dpi="300" orientation="Landscape" size="a4" margin="0 0 0 0">
        <pdf-html>
            <html>
                <body>
                    <div>This is the <b>cover</b> page. Quite cool sir. </div>
                </body>
            </html>
        </pdf-html>
    </pdf-document>

    <pdf-document dpi="300" orientation="Portrait" size="a4" margin="5 5 5 5">
